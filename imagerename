#!/bin/bash
########################################################################
#
# imagerename
# Fotos nach Datum umbenennen
#
########################################################################

########################################################################
# Variabeln
DATEFORMAT="%Y-%m-%d_%H-%M-%S"

########################################################################
# Main

if [ "$#" -eq "0" ]
then
  jhead -nf$DATEFORMAT *.[jJ][pP][gG]
else
  jhead -nf$DATEFORMAT $@
fi

# EOF
